<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.orangecoastcollege.cs273.ltruong58.tipcalculator.MainActivity"
    android:columnCount="2"
    android:id="@+id/tipCalcGridLayout"
    android:useDefaultMargins="true">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amountEditText"
        android:inputType="number"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="0"
        android:layout_rowSpan="1"
        android:selectAllOnFocus="true"
        android:enabled="true"
        android:focusable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/recommend_tip_percentage"
        android:id="@+id/percentTextView"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnSpan="1" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/percentSeekBar"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_columnSpan="1"
        android:max="50"
        android:progress="10"
        android:indeterminate="false"
        android:layout_gravity="fill_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tip_amount_textview"
        android:id="@+id/tipAmountLabelTextView"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_columnSpan="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/total_amount_textview"
        android:id="@+id/totalAmountLabelTextView"
        android:layout_column="0"
        android:layout_row="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/default_value_amount"
        android:id="@+id/tipAmountTextView"
        android:layout_row="2"
        android:layout_column="1"
        android:background="#ffe0b2"
        android:padding="12dp"
        android:layout_gravity="fill_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/default_value_amount"
        android:id="@+id/totalAmountTextView"
        android:layout_column="1"
        android:layout_row="3"
        android:background="#ffe0b2"
        android:padding="12dp"
        android:layout_gravity="fill_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/amountTextView"
        android:layout_column="0"
        android:layout_row="0"
        android:hint="@string/enter_amount"
        android:layout_gravity="fill_horizontal"
        android:background="#bbdefb"
        android:padding="12dp"
        android:elevation="4dp"
        android:layout_columnSpan="2" />

</GridLayout>
